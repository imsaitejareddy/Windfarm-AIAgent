{
    "floris_version": "v3.5",
    "name": "cares_farm",
    "description": "A simplified 3-turbine wind farm for CARES simulation.",
  
    "logging": {
      "console": {
        "enable": true,
        "level": "WARNING"
      },
      "file": {
        "enable": false,
        "level": "WARNING"
      }
    },
  
    "farm": {
      "layout_x": [
        0.0,
        500.0,
        1000.0
      ],
      "layout_y": [
        0.0,
        0.0,
        0.0
      ],
      "turbine_type": [
        "nrel_5mw"
      ]
    },
  
    "flow_field": {
      "air_density": 1.225,
      "reference_wind_height": 90.0,
      "wind_shear": 0.12,
      "wind_veer": 0.0,
      "wind_speeds": [
        8.0
      ],
      "wind_directions": [
        270.0
      ],
      "turbulence_intensity": 0.06
    },
  
    "wake": {
      "model_strings": {
        "velocity_model": "jensen",
        "deflection_model": "jimenez",
        "turbulence_model": "crespo_hernandez",
        "combination_model": "sosfs"
      },
      "enable_secondary_steering": true,
      "enable_transverse_velocities": true,
      "enable_yaw_added_recovery": true,
      "wake_velocity_parameters": {
        "jensen": {
          "we": 0.05
        }
      },
      "wake_deflection_parameters": {
        "jimenez": {
          "kd": 0.05,
          "ad": 0.0,
          "bd": 0.0
        }
      },
      "wake_turbulence_parameters": {
        "crespo_hernandez": {
          "initial": 0.1,
          "constant": 0.73,
          "ai": 0.8,
          "downstream": -0.275
        }
      }
    },
  
    "solver": {
      "type": "turbine_grid",
      "turbine_grid_points": 3
    }
  }